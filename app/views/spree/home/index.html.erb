<% content_for :datos_sociales do %>
  <% unless @cause.nil? %>
    <%= ('<meta property="og:title" content=" Yanapana | ' + @cause.title  + ' " />').html_safe %>
    <%= ('<meta property="og:url" content="' + root_url + 'week-' + @cause.id.to_s + ' " />').html_safe %>
    <%= ('<meta property="og:image" content="' + @cause.sharephoto.url(:share_photo).to_s + '" />').html_safe if @cause.sharephoto %>
    <%= ('<meta property="og:description" content="' + @cause.description.to_s  + '" />').html_safe %>
    <meta property="og:type" content="website"/>
  <% end %>
<% end %>

<!--SectionContainer-->

<div class="section_container">
	<!--Headline Starts-->
        <div id="headline" class="jean">
            <section>
                <!--CART STARTS-->
                <div id="shopping_cart">
                  <h1>Fashion, Solidarity and Change.</h1>
                <h4>$8 of each purchase are given to a cause helping the development and protection of women</h4>
            </section>
        </div>
        <!--Headline Ends-->

<% unless @cause.nil?  %>
<!--Cause Starts-->
<a name="cause"></a>
            <div  id="mostrar"  class="cause_background">
                  <div id="cause" class="cause">
                      <section>
                          <!--Cause Description Starts-->
                          <%= image_tag ("image-yanapana/trianglewhite.png"), :class=>'triangle-w'%>
                          <div class="cause_description">

                              <h2 id="mostrar"><%= @cause.title %></h2>

				              <div id="caja">
                                  <div class="description_text hidden_tablet hidden_movil" id="sample">
                                       <h4>Cause</h4>
                                       <p> <%= @cause.description %> </p>
                                  </div>

                            <!--Cause Video Starts-->

                            <iframe class="video_description" width="560" height="315" src="http://www.youtube.com/embed/<%= @cause.video%>" frameborder="0" allowfullscreen></iframe>


                              <!--Cause Video Ends-->

                               <!--ORG Logo Starts-->
                          <div id="org_description">

                              <!--ORG Logo Ends-->
                              <!--ORG Description Starts-->
                            <% if @cause.organization %>
                              <h4 class="hidden_movil hidden_tablet">Organization</h4>
                              <p class="hidden_movil hidden_tablet"><%= @cause.organization.description%></p>

                              <h1 class="org_logo"><%= link_to (image_tag(@cause.organization.photo.url(:org))), @cause.organization.webpage, :target => "_blank" %></h1>
                              <!--Facebook like button Starts-->
                              <% if @cause.organization.link_facebook %>
                                <div class="fb-like" style="overflow: hidden" href="<%= @cause.organization.link_facebook %>" data-font="arial" data-show-faces="false" data-width="450px" data-layout="button_count" data-send="false"></div>
                              <% end %>
                              <!--Facebook like button Ends-->
                              <!--Twitter follotw button Starts-->
                              <% if @cause.organization.link_twitter %>
                              <div class="follow-btn">
                                <a href="<%= @cause.organization.link_twitter  %>" class="twitter-follow-button" data-show-count="false" data-show-screen-name="false" data-dnt="true"></a>
                              </div>
                            <% end %>
                              <!--Twitter follotw button Ends-->

                              <a data-pin-config="none" href="//pinterest.com/pin/create/button/?url=<%= (root_url + 'week-' + @cause.id.to_s).html_safe%>&media=<%= @cause.organization.photo.url(:product) %>&description=<%= @cause.title %>%20at%20www.yanapana.com" data-pin-do="buttonPin" ><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png" /></a>

                              <!--Shop Now Starts-->
                              <h1 id="call-to-action" class="sc-button blue">Support!</h1>
                              <!--Shop Now Ends-->
                          </div>
                          <% end %>
                          <!--ORG Description Ends-->
                          </div>
                          <!--Cause Description Ends-->
			                </div>
                      </section>
                  </div>
            </div>
        </div>

        <!--Cause Ends-->
<!--Goal Counter Copy Starts-->
<a name="goals"></a>
            <div id="goals">
                <section>
                <div class="goals_section">
                      <ul>
                        <div id="fb_colsize">
                          <li>
                            <a title="Share" onclick="window.open('http://www.facebook.com/sharer/sharer.php?s=100&amp;p[title]=<%= (@cause.titleshare).html_safe %>&amp;p[url]=<%= (Rack::Utils.escape(root_url) + 'week-' + @cause.id.to_s).html_safe %>&amp;p[images][0]=<%= @cause.sharephoto.url(:share_photo) if @cause.sharephoto%>','sharer','toolbar=0,status=0,width=580,height=315'); return false;" target="_blank" class="share fb"><div class="fb-icon hidden_movil"></div><%= image_tag ("image-yanapana/facebook_icon.png"), :class=>'hidden_desktop'%></a>

                            <div id="goalbar" class="goalbar_style">
                              <i id= "count_sharesf" class="progBar"></i>
                            </div>
                            <div class="stats">
                              <h4>
                                <span class="nums fr">
                                  <span id="facebook_per_cause"  class="count"></span>/
                                  <span class="goal"><%= @cause.goal_facebook %></span>
                                </span>
                                <span class="word fl">Share goal</span>
                              </h4>
                            </div>
                      </li>
                    </div>
                    <div id="tt_colsize">
                      <li>
                        <!--<a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>-->
                        <a href="https://twitter.com/intent/tweet?text=<%= @cause.title  %>+@yanapanawear&amp;original_referer=<%=(Rack::Utils.escape(root_url) + 'week-' + @cause.id.to_s).html_safe %>&amp;url=<%=(Rack::Utils.escape(root_url) + 'week-' + @cause.id.to_s).html_safe %>&amp;counturl=<%= (Rack::Utils.escape(root_url) + 'week-' + @cause.id.to_s).html_safe %>" target="_blank" ><div class="tt-icon hidden_movil"></div><%= image_tag ("image-yanapana/twitter_icon.png"), :class=>'hidden_desktop'%>
  </a>
                        <div id="goalbar" class="goalbar_style"><i id = "count_twitts" class="progBar"></i></div>
                         <div class="stats">
                           <h4>
                            <span class="nums fr">
                              <span id="twitts_per_cause" class="count"></span>/
                              <span class="goal"><%= @cause.goal_twitter %></span>
                            </span>
                            <span class="word fl">Tweet goal</span>
                          </h4>
                        </div>
                      </li>
                    </div>
                    <div id="don_colsize">
                      <li>
                        <div class="donation_container">
                          <div class="fl">
                            <%= image_tag ("image-yanapana/money_icon.png")%>
                          </div>
                          <div class="fl hidden_movil">
                            <p>Donated so far</p>
                            <span class="bucks"><%= number_to_currency(@cause.goal_money, :precision=>0) %></span>
                          </div>
                        </div>
                        <div id="goalbar" class="goalbar_style">
                          <% p = @total / @cause.goal_money %>
                          <% p = 470 * p %>
                          <i class="progBar" style="width:<%= p %>px"></i>
                        </div>
                        <div class="stats">
                          <h4>
                            <span class="nums fr">
                              <span class="count"><%= number_to_currency(@total, :precision=>0)%></span>/
                              <span class="goal"><%= number_to_currency(@cause.goal_money, :precision=>0)%></span>
                            </span>
                            <span class="word fl">Donation goal <%= @cause.number_goal %></span>
                          </h4>
                        </div>

                      </li>
                    </div>
                  </ul>
                </div>
                </section>
            </div>
            <!--Goal Counter Copy Ends-->

      <% end %><!--End if exist 1 cause-->

<a name="products"></a>
<% if params[:keywords] %>
      <% if @products_cause.nil? %>
        <h6 class="search-results-title">no_products_found</h6>
      <% else %>
        <%= render :partial => 'spree/shared/products', :locals => { :products => @products_cause, :taxon => @taxon } %>
      <% end %>
    </div>

  <% else %>
<!--Mid Section Starts-->

    <div class="productos jean">

      <% if @products_cause.empty? %>
            <h1></h1>
      <% else %>
        <%= render :partial => 'spree/shared/products', :locals => { :products => @products_cause, :taxon => @taxon } %>
      <% end %>
    </div>
          <% unless @artist.nil? %>
            <a name="artist"></a>
            <div id="artist-section" class="jean">
                <section>
                    <h2 class="sub_title">The Artist</h2>
                    <div class="artist"><a><%= image_tag(@artist.photo.url(:product)) %></a></div>
                    <div class="artist_description">
                        <h3><%= @artist.name + " " + @artist.last_name %></h3>
                        <p><%= (@artist.reason).html_safe %></p>

                    </div>
                     <!--Facebook like button Starts-->
                     <% if @artist.link_facebook %>
                      <div class="fb-like" style="overflow: hidden" href="<%= @artist.link_facebook %>" data-font="arial" data-show-faces="true" data-width="50px" data-layout="button_count"  data-height="30px" data-send="false" ></div>
                     <!--Facebook like button Ends-->
                    <% end %>
                    <!--Twitter follotw button Starts-->
                    <div class="follow-btn"><a href="<%= @artist.link_twitter  %>" class="twitter-follow-button" data-show-count="false" data-show-screen-name="false" data-dnt="true"></a></div>
                    <!--Twitter follow button Ends-->
                </section>
            </div>
          <% end %>
            <div class="comments-section jean pb"><a name="comments"></a>
                <section class="comments">
                <h1 class="comments_tag fl">Don’t be shy! Express your thoughts about this week’s awesome cause right here: </h1>
                <% unless @cause.nil? %>
                <div id="comments" class="fl">
                    <div class="fb-comments" data-href="<%= (root_url + 'week-' + @cause.id.to_s).html_safe %>" data-width="700" data-num-posts="2" data-order-by="reverse_time"></div>
                </div>
                <% end %>
                </section>
            </div>
<!--Mid Section Ends-->
  <% end %>

</div><!--EndSectionContainer-->
