  <% unless @cause.nil? %>
    <script charset="utf-8" language="javascript" type="text/javascript">
    $(document).ready(function() {
      $(".cause_background").anystretch("<%=@cause.photo.url%>");
    });
    </script>
    <script type="text/javascript">
      $(function(){
        $("#mostrar").click(function(event) {
          $("#caja").slideToggle();
          });
        });

        function getfbcount(url){
        var fblikes;
          $.getJSON('https://api.facebook.com/method/fql.query?format=json&query=select%20%20share_count%20from%20link_stat%20where%20url="' + url + '"', function(data){

          fblikes = data[0]['share_count'];
          $('body').append('fblikes ' + fblikes);
          $('#facebook_per_cause').html(fblikes);
          var progresf = fblikes * 216;
          var totalf = <%= @cause.goal_facebook %>;
          var total_facebook = progresf / totalf;
          d = document.getElementById('count_sharesf');
          d.style.width= total_facebook + 'px';
          });
        }
      function gettwcount(url){
      var tweets;
      $.getJSON('http://urls.api.twitter.com/1/urls/count.json?url=' + url + '&callback=?', function(data){
          tweets = data.count;
          $('body').append('tweets' + tweets);
          $('#twitts_per_cause').html(tweets);
          var progres = tweets * 216;
          var total = <%= @cause.goal_twitter %>;
          var total_twitter= progres / total;
          d = document.getElementById('count_twitts');
          d.style.width= total_twitter + 'px';
          });
      }

      $(document).ready(function($){
        var url = "<%= (root_url + 'week-' + @cause.id.to_s).html_safe %>"

        getfbcount(url);
        gettwcount(url);
      });
  </script>
  <% end %>
<% end %>
<% if flash[:notice] %>
  <script type="text/javascript">
    $('.feedback.positive').html("Thank you for supporting this week YANAPANA's cause, you are awesome!").fadeIn(500).delay(2000).fadeOut(500);
  </script>
<% end %>
