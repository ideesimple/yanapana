<div class="left">
  <%= f.field_container :name do  %>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  <% end %>

  <%= f.field_container :description do  %>
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "height:50px" %>
  <% end %>

  <%= f.field_container :email do  %>
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  <% end %>

  <%= f.field_container :phonenumber do  %>
    <%= f.label :phonenumber, 'Phone Number' %><br />
    <%= f.text_field :phonenumber %>
  <% end %>

  <%= f.field_container :country do  %>
    <%= f.label :country %><br />
    <span id="bcountry">
      <%= f.collection_select(:country, Spree::Country.order("name ASC").all, :id, :name) %>
    </span>
  <% end %>

</div>

<div class="right">
  <%= f.field_container :contact do  %>
    <%= f.label :contact, 'Person contact'%><br />
    <%= f.text_field :contact %>
  <% end %>

  <%= f.field_container :link_twitter do  %>
    <%= f.label :link_twitter%><br />
    <%= f.text_field :link_twitter %>
  <% end %>

  <%= f.field_container :link_facebook do  %>
    <%= f.label :link_facebook%><br />
    <%= f.text_field :link_facebook %>
  <% end %>

  <%= f.field_container :photo do  %>
    <%= f.label :photo%><br />
    <%= f.file_field :photo %>
  <% end %>

</div>
