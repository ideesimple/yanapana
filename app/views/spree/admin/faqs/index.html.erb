<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_product_link">
      <%= link_to '<span><img alt="Add" src="/assets/admin/icons/add.png">New Faq</span>'.html_safe, new_admin_faq_path, :class => "button"  %>
    </li>
  </ul>
</div>

<h1>Listing Faqs</h1>

<table class="index" id="listing_faqs" data-hook>
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Actions</th>
  </tr>

  <% @faqs.each do |faq|   %>
    <tr>
      <td><%= faq.question  %></td>
      <td><%= faq.answer %></td>
      <td>
        <%= link_to '<img alt="Edit" src="/assets/admin/icons/edit.png">Edit'.html_safe, edit_admin_faq_path(faq), :class=>"edit icon_link"  %>
        &nbsp;
        <%= link_to '<img alt="Delete" src="/assets/admin/icons/delete.png">Delete'.html_safe, admin_faq_path(faq), confirm: "Are you sure?", method: :delete  %>

      </td>
    </tr>


  <% end %>

</table>

