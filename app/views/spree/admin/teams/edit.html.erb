<h1>Edit Member</h1>

<%= form_for [:admin, @team], :html => {:multipart => true} do |f| %>

  <% if @team.errors.any?  %>
    <div id ="error_explanation">
      <h2><%= pluralize(@team.errors.count, "error")%></h2>

      <ul>
        <% @team.errors.full_messages.each do |msg| %>
          <li><%= msg  %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render :partial => 'form', :locals => {:f => f} %>
    <p>
      <%= button ("Save") %> <%= link_to t('cancel'), admin_team_url(@team) %>
    </p>
<% end %>
