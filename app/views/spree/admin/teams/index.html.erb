<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_product_link">
      <%= link_to '<span><img alt="Add" src="/assets/admin/icons/add.png">New Member</span>'.html_safe, new_admin_team_path, :class => "button"  %>
    </li>
  </ul>
</div>

<h1>Listing Team</h1>

<table class="index" id="listing_team" data-hook>
  <tr>
    <th>Fullname</th>
    <th>Job Position</th>
    <th>Actions</th>
  </tr>

  <% @teams.each do |team|   %>
    <tr>
      <td><%= link_to team.fullname, admin_team_url(team) %></td>
      <td><%= team.jobp %></td>
      <td>
        <%= link_to '<img alt="Edit" src="/assets/admin/icons/edit.png">Edit'.html_safe, edit_admin_team_path(team), :class=>"edit icon_link"  %>
        &nbsp;
        <%= link_to '<img alt="Delete" src="/assets/admin/icons/delete.png">Delete'.html_safe, admin_team_path(team), confirm: "Are you sure?", method: :delete  %>

      </td>
    </tr>


  <% end %>

</table>

