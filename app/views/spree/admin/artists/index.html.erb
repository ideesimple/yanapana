<div class="toolbar" data-hook="toolbar">
  <ul class="actions">
    <li id="new_product_link">
      <%= link_to '<span><img alt="Add" src="/assets/admin/icons/add.png">New Artist</span>'.html_safe, new_admin_artist_path, :class => "button"  %>
    </li>
  </ul>
</div>

<h1>Listing Artists</h1>

<table class="index" id="listing_artists" data-hook>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Webpage</th>
    <th>Actions</th>
  </tr>

  <% @artists.each do |artist|   %>
    <tr>
      <td><%= link_to artist.name, admin_artist_url(artist)  %></td>
      <td><%= artist.email  %></td>
      <td><%= artist.webpage  %></td>
      <td>
        <%= link_to '<img alt="Edit" src="/assets/admin/icons/edit.png">Edit'.html_safe, edit_admin_artist_path(artist), :class=>"edit icon_link"  %>
        &nbsp;
        <%= link_to '<img alt="Delete" src="/assets/admin/icons/delete.png">Delete'.html_safe, admin_artist_path(artist), confirm: "Are you sure?", method: :delete  %>

      </td>
    </tr>


  <% end %>

</table>

