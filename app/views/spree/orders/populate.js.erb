$('#link-to-cart').html("<%= j(link_to_cart) %>");
<% if current_order.item_count > 1 %>
  $('.item').html("<b><%= current_order.item_count %></b> ITEMS /");
<% else %>
  $('.item').html("<b><%= current_order.item_count %></b> ITEM /");
<% end %>
$('.price').html("<b><%= current_order.display_total %></b>");
$('.cart_drop').html("<ul><%= escape_javascript(render :partial=> 'spree/shared/preview_cart', :locales => {:current_order => current_order})%></ul>");

<% if @item_add.errors.any? %>
  $('.feedback.negative').html('<%= escape_javascript(flash[:error][0].to_s)%>').fadeIn(500).delay(4000).fadeOut(500);
<% else %>
  $('.feedback.positive').fadeIn(700).delay(3000).fadeOut(700);
<% end %>

$('div[id^="size_drop_"]').slideUp(300);
